<h3><%= messages.login %></h3>
<% if (data.logSuc == 1) { %>
<p><%= messages.loginSuccessful %>
<% } else if (data.logSuc == 2) { %>
<p><%= messages.userNotFound %><br />
<a href="login"><%= messages.backToLogin %></a>
<% } else if (data.logSuc == 3) { %>
<p><%= messages.youAreAlreadyLoggedIn %> <a href="logout"><%= messages.logOutHere %></a>
<% } else { %>
<form action="." method="post">
	<p><b><%= messages.username %>:</b><br />
	<input type="text" name="uname"><br />
	<b><%= messages.password %>:</b><br />
	<input type="password" name="pword"><br /><br />
	<input type="submit" name="login" value="<%= messages.login %>">
</form>

<p><%= messages.dont_have_user_yet %> <a href="register" class="inner_link"><%= messages.register_here %></a>
<% } %>